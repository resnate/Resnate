<% if params[:search].present? %>
<ul class="users">
	Searched!
  <% @users.each do |user| %>
    <li>
      <%= image_tag "https://graph.facebook.com/#{user.uid}/picture?width=100&height=100" %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>
<% else %>
<ul class="users">
	Hello
  <% @users.each do |user| %>
    <li>
      <%= image_tag "https://graph.facebook.com/#{user.uid}/picture?width=100&height=100" %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>
<% end %>