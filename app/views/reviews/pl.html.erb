<head>
	<meta property="og:title" content="<%= @name %>" />
    <meta property="og:description" content="Resnate: The Music Social Network." />
    <meta property="og:image" content="<%= @image %>" />
    <body>
    	<div class="hiddenReviewID"><%= params[:id] %></div>
    	<div id="publicReview"></div>
    	</div>
    </body>
 </head>

 <script type="text/javascript">

 	$(function(){
 		$.get('/reviews/' + $('.hiddenReviewID').html(), function(result){
 			$('#publicReview').html(result);
 			$('#publicReview #reviewBody').append("<h1 id='publicSignUp'>Sign up to <a href=\"/\">resnate.com</a> to find read more reviews for your favourite artist's albums and gigs.</h1>")
 		});
 	});

 </script>
